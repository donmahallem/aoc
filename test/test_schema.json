{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "TestResult": {
      "oneOf": [
        {
          "type": "integer"
        },
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "integer"
          }
        }
      ]
    },
    "TestCase": {
      "type": "object",
      "properties": {
        "input": {
          "type": "string",
          "description": "Direct string input for the test case"
        },
        "file": {
          "type": "string",
          "description": "Path to a file containing inputs"
        },
        "name": {
          "type": "string",
          "description": "Unique test name used in generated test function/subtest names"
        },
        "part1": {
          "$ref": "#/definitions/TestResult",
          "description": "Expected result for Part 1"
        },
        "part2": {
          "$ref": "#/definitions/TestResult",
          "description": "Expected result for Part 2"
        }
      },
      "required": ["name"],
      "oneOf": [
        {
          "required": ["input"]
        },
        {
          "required": ["file"]
        }
      ],
      "anyOf": [
        {
          "required": ["part1"]
        },
        {
          "required": ["part2"]
        }
      ],
      "additionalProperties": false
    }
  },
  "type": "object",
  "patternProperties": {
    "^[0-9]{2}$": {
      "type": "object",
      "patternProperties": {
        "^[0-9]+$": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/TestCase"
          },
          "description": "List of test cases for this day"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
